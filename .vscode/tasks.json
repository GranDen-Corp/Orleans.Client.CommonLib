{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "dependsOn": [
                "build host",
                "build client"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build host",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/example/LocalConsoleSiloHost/LocalConsoleSiloHost.csproj"
            ],
            "problemMatcher": "$tsc",
            "group": "build"
        },
        {
            "label": "build client",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/example/OrleansDemoClient/OrleansDemoClient.csproj"
            ],
            "problemMatcher": "$tsc",
            "group": "build",
            "dependsOn": [
                "build host"
            ]
        }
    ]
}